    <script>
        (function() {
            // DOM elements
            const urlInput = document.getElementById('tiktokUrlInput');
            const fetchBtn = document.getElementById('fetchVideoBtn');
            const placeholder = document.getElementById('placeholderMessage');
            const videoContainer = document.getElementById('videoContainer');
            const videoPlayer = document.getElementById('videoPlayer');
            const videoSource = document.getElementById('videoSource');
            const downloadBtn = document.getElementById('downloadVideoBtn');

            // fake demo video URL (public sample, CORS-friendly if possible)
            // we use a couple of nice demo videos that are actually mp4 files (short, loop, safe)
            const DEMO_VIDEO_URLS = [
                'https://commondatastorage.googleapis.com/gtv-videos-bucket/sample/ForBiggerBlazes.mp4',  // 15s
                'https://commondatastorage.googleapis.com/gtv-videos-bucket/sample/ForBiggerEscapes.mp4',
                'https://commondatastorage.googleapis.com/gtv-videos-bucket/sample/ForBiggerFun.mp4'
            ];

            // just for mapping sample links to different videos (so it feels like different tikoks)
            function getDemoVideoForUrl(tikTokUrl) {
                // simple hash to pick from demo urls consistently but not important
                let hash = 0;
                if (tikTokUrl) {
                    for (let i = 0; i < tikTokUrl.length; i++) {
                        hash = ((hash << 5) - hash) + tikTokUrl.charCodeAt(i);
                        hash |= 0; // Convert to 32bit integer
                    }
                }
                const index = Math.abs(hash) % DEMO_VIDEO_URLS.length;
                return DEMO_VIDEO_URLS[index];
            }

            // function to load video from "tiktok url" (simulated)
            function loadVideoFromTikTok(inputUrl) {
                if (!inputUrl || !inputUrl.includes('tiktok.com')) {
                    // if not tiktok, we still show a demo video (graceful fallback)
                    console.log('non-tiktok or empty, using fallback demo');
                }

                // in a real service you'd call an API, but here we serve a static demo mp4
                // to simulate a real download website, we show a video and enable download.
                const videoUrl = getDemoVideoForUrl(inputUrl || 'default');

                // update video source
                videoSource.src = videoUrl;
                videoPlayer.load(); // important for safari/chrome

                // when video is ready we show container
                videoPlayer.oncanplay = function() {
                    placeholder.classList.add('hidden');
                    videoContainer.classList.remove('hidden');
                };

                // if error (e.g., network issue) keep placeholder with message?
                videoPlayer.onerror = function() {
                    alert('Video preview could not be loaded, but you can still try the download (demo).');
                    // still show container? maybe, but show something.
                    placeholder.classList.add('hidden');
                    videoContainer.classList.remove('hidden');
                };

                // download link: create an anchor and simulate download
                downloadBtn.onclick = function(e) {
                    e.preventDefault();
                    // we trigger download via a temporary link
                    const link = document.createElement('a');
                    link.href = videoUrl;
                    // extract filename from url or generic
                    const filename = 'tiktok_video_' + Date.now() + '.mp4';
                    link.download = filename;   // download attribute
                    document.body.appendChild(link);
                    link.click();
                    document.body.removeChild(link);
                };
            }

            // reset to placeholder (if needed)
            function resetToPlaceholder() {
                placeholder.classList.remove('hidden');
                videoContainer.classList.add('hidden');
                videoSource.src = '';  // clear source
                videoPlayer.load();
            }

            // event listener for fetch button
            fetchBtn.addEventListener('click', function() {
                const url = urlInput.value.trim();
                if (url === '') {
                    alert('Please paste a TikTok video link');
                    return;
                }
                // show loading state (optional)
                fetchBtn.innerHTML = '<i class="fas fa-spinner fa-pulse"></i> loading';
                fetchBtn.disabled = true;

                // simulate network delay (realistic)
                setTimeout(() => {
                    loadVideoFromTikTok(url);
                    fetchBtn.innerHTML = '<i class="fas fa-download"></i> Get video';
                    fetchBtn.disabled = false;
                }, 700);
            });

            // sample links click handler
            document.querySelectorAll('.sample-link').forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    const sampleUrl = this.getAttribute('data-sample');
                    urlInput.value = sampleUrl;
                    // trigger fetch automatically (nice ux)
                    fetchBtn.click();
                });
            });

            // optional: load a default video on page load so it's not empty
            window.addEventListener('load', function() {
                // we set a placeholder, but we can also show a sample video (makes website feel alive)
                // but we keep placeholder as default. 
                // However let's prefill input with a sample so user just clicks.
                urlInput.value = 'https://www.tiktok.com/@scout2015/video/7123456789012345678';
                // We don't auto fetch, just to keep it clean (user can click get video)
                // but if you want auto-load after 0.5s, you can uncomment:
                // setTimeout(() => fetchBtn.click(), 200);
            });

            // if user hits enter in input
            urlInput.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    e.preventDefault();
                    fetchBtn.click();
                }
            });

            // manual reset to placeholder function can be used but not needed.

            // Note: for mobile, ensure video plays nicely.
        })();
    </script>
    <!-- small note: this is a demo concept – real tiktok download requires backend/api -->
    <!-- but frontend interface fully functional with sample videos. looks professional and simple. -->
</body>
</html>
