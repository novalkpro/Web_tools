<body>
    <div class="main-card">
        <div class="header">
            <div class="logo-icon">
                <i class="fab fa-tiktok"></i>
            </div>
            <h1>TokSave <span>✦</span></h1>
        </div>
        <div class="subhead">
            <i class="fas fa-link"></i> 
            <span>Paste TikTok video link — no watermark, direct download</span>
        </div>

        <!-- URL input -->
        <div class="url-box">
            <i class="fas fa-globe"></i>
            <input type="url" id="tiktokUrlInput" placeholder="https://www.tiktok.com/@user/video/1234567890" value="https://www.tiktok.com/@scout2015/video/7123456789012345678?is_from_webapp=1">
            <button id="fetchVideoBtn"><i class="fas fa-download"></i> Get video</button>
        </div>

        <!-- quick samples -->
        <div class="quick-samples">
            <div class="sample-label"><i class="fas fa-mouse-pointer"></i> try example:</div>
            <div class="sample-buttons">
                <a href="#" class="sample-link" data-sample="https://www.tiktok.com/@scout2015/video/7123456789012345678"><i class="fab fa-tiktok"></i> scout @scout2015</a>
                <a href="#" class="sample-link" data-sample="https://www.tiktok.com/@charlidamelio/video/6987654321234567890"><i class="fab fa-tiktok"></i> charli</a>
                <a href="#" class="sample-link" data-sample="https://www.tiktok.com/@khaby.lame/video/7234567890123456789"><i class="fab fa-tiktok"></i> khaby.lame</a>
            </div>
        </div>

        <!-- result card with video player -->
        <div class="result-area" id="resultArea">
            <!-- placeholder when no video loaded -->
            <div id="placeholderMessage" class="placeholder-message">
                <i class="fas fa-video"></i>
                <p>Your video preview will appear here</p>
                <span class="text-small" style="color:#5f7993;">no watermark · ready to download</span>
            </div>

            <!-- actual video player + download (hidden initially) -->
            <div id="videoContainer" class="hidden">
                <div class="video-wrapper">
                    <video id="videoPlayer" controls playsinline crossorigin="anonymous">
                        <source src="" type="video/mp4" id="videoSource">
                        Your browser does not support the video tag.
                    </video>
                </div>
                <div class="download-panel" id="downloadPanel">
                    <div class="video-meta">
                        <i class="fab fa-tiktok"></i>
                        <div>
                            <span>TikTok video</span><br>
                            <small>no watermark · mp4</small>
                        </div>
                    </div>
                    <button class="download-btn" id="downloadVideoBtn">
